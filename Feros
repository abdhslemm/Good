import android.app.Activity;
import android.os.Bundle;
import android.os.Handler;
import android.widget.Toast;

public class FakeVirusActivity extends Activity {
    Handler handler = new Handler();

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        
        showFakeVirus();
    }

    private void showFakeVirus() {
        Toast.makeText(this, "📛 فيروس يعمل... جاري حذف الملفات! 💣", Toast.LENGTH_LONG).show();

        handler.postDelayed(new Runnable() {
            @Override
            public void run() {
                Toast.makeText(FakeVirusActivity.this, "🧨 النظام تم اختراقه!", Toast.LENGTH_SHORT).show();
                showFakeVirus(); // يعيد نفسه كل 3 ثواني
            }
        }, 3000);
    }
}
